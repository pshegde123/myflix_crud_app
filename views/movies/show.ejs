<!-- views/movies/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Details</title>  
    <style>
      body {
        font-family: 'Poppins', sans-serif;
        height: 100vh;
        width: 100vw;
        background-color: #000000;
        color: #fefcf4;
      }
    </style>  
  </head>
  <body >    
    <%- include('../partials/_navbar.ejs') %>    
    <div class="container mt-4">
      <div class="row">
          <div class="col-6">
        <h1 class="text-center"><%= movie_details.title%></h1>
        <img src="https://image.tmdb.org/t/p/w500/<%= movie_details.poster_path %>" alt="<%= movie_details.title %> poster" style="width:200px;height:auto;" />                        
        <p>Overview: <%= movie_details.overview %></p>
        <p>Popularity: <%= movie_details.popularity %></p>
        <p>Vote Average: <%= movie_details.vote_average %></p>               
        <% if (user) { %>
          Notes:
          <form action="/movies/movie/<%= movie_details.id %>" method="POST">
            <input name="id" value="<%= movie_details.id %>" style="display: none;">
            <input name="title" value="<%= movie_details.title %>"  style="display: none;">
            <input name="overview" value="<%= movie_details.overview %>"  style="display: none;">
            <input name="poster_path" value="<%= movie_details.poster_path %>"  style="display: none;">
            <input name="vote_average" value="<%= movie_details.vote_average %>"  style="display: none;">            
            <textarea id="notes" name="notes" rows="8" cols="50" placeholder="Enter your notes here..." value="<%= movie_details.notes %>"></textarea><br>
            
            <button id="btnAddToFavorites" class="btn btn-success" type="submit">Add To Favorites</button>
          </form>          
          <% } %>    
          </div>
          <div class="col-6">

          </div>
      </div>
      <div class="row mt-4">
        <div class="col-6">
          <form action="/movies/all" method = "get">
            <button id="btnBack" class="btn text-dark"> Back </button>
         </form>        
        </div>
      </div>
    </div>
  </body>
</html>
